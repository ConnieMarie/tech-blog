<article class="post card">
        <div class="title card-header">
          <h2>
            <a class="card-header" href="/post/{{id}}">{{title}}</a>
          </h2>
        </div>
        <div class="card-body">
          <p>
            {{contents}}
          </p>
          by
          {{user.username}}
          on
          {{format_date created_at}}
          <a class="app-link" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
      </article>