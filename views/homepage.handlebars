<ol class="post-list">
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <h2>{{title}}</h2>
        </div>
        <div class="meta">
          {{user.username}}
          <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
      </article>
    </li>
  {{/each}}
</ol>